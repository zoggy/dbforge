# check for one particular file of the sources
AC_INIT(master.Makefile.in)

VERSION=0.8
PACKAGE=camlget

# The root directory where we will compile
ROOT=`pwd`

ocaml unix.cma str.cma checkocaml.ml ocaml_config.sh || exit 1
. ./ocaml_config.sh

echo "ocaml library path is $OCAMLLIB"


##########################
# debugging
##########################

DEBUG_LEVEL=0
AC_ARG_WITH(debug-level,
[  --with-debug-level=n   Set debug level to n [[default=0]]
],
[ DEBUG_LEVEL="$withval"])

echo Debug level is set to $DEBUG_LEVEL

#############################
# substitutions to perform
AC_SUBST(OCAMLC)
AC_SUBST(OCAMLOPT)
AC_SUBST(OCAMLDEP)
AC_SUBST(OCAMLLEX)
AC_SUBST(OCAMLYACC)
AC_SUBST(OCAMLBEST)
AC_SUBST(OCAMLVERSION)
AC_SUBST(OCAMLLIB)
AC_SUBST(OCAMLBIN)
AC_SUBST(OCAMLDOC)
AC_SUBST(OCAMLFIND)
AC_SUBST(EXEC_PREFIX)
AC_SUBST(ROOT)
AC_SUBST(LABLGTK2_INCLUDES)
AC_SUBST(LABLGTKEXTRAS_INCLUDES)
AC_SUBST(DEBUG_LEVEL)
AC_SUBST(VERSION)
AC_SUBST(PACKAGE)

# Finally create the master.Makefile.in
ACFILES="master.Makefile META src/cgversion.ml"
AC_OUTPUT($ACFILES)
chmod a-w master.Makefile
chmod a-w META
chmod a-w src/cgversion.ml

